" dein
source ~/.config/nvim/dein.vim

" autocmd
source ~/.config/nvim/autocmd.vim

" options
set ambiwidth=double
set autoindent
set autoread
set backspace=indent,eol,start
set cursorline
set clipboard^=unnamedplus
set expandtab
set laststatus=2
set hls
set number
set scrolloff=5
set showcmd
set shiftwidth=2
set smartindent
set softtabstop=2
set tabstop=2

" command
inoremap jj <Esc>

" theme
set termguicolors
set background=dark
